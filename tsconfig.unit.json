{
  "compilerOptions": {
    "module": "ESNext",
    "types": [
      "mocha",
      "chai",
      "sinon",
      "@league-of-foundry-developers/foundry-vtt-types",
    ],
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "files": [
    "src"
  ]
}
